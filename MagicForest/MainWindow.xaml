<Window x:Class="MagicForest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicForest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="mainGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
            <TextBlock> On this cell, we have :</TextBlock>
            <TextBlock x:Name="currentCellText" MinHeight="100">. . . </TextBlock>
                <Button x:Name="MoveButton" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Height="30" Click="On_DoStuffButtonClick">Do Stuff</Button>
        </StackPanel>
    </Grid>
</Window>
